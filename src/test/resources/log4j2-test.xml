<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%p] %c{1.} %t %msg%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="INFO">
			<AppenderRef ref="Console" />
		</Root>
		<Logger name="com.orwellg.yggdrasil" level="DEBUG" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="com.orwellg.umbrella.commons.storm.topology.component.bolt" level="DEBUG" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="com.orwellg.umbrella.commons.storm.wrapper.kafka" level="DEBUG" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="com.orwellg.umbrella.commons.storm.topology.generic.bolt" level="DEBUG" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="com.orwellg.yggdrasil.party.cdc.topology.bolts" level="DEBUG" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
	</Loggers>
</Configuration>
